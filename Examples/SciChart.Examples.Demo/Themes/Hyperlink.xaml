<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:behaviors="clr-namespace:SciChart.Examples.Demo.Behaviors">

    <ResourceDictionary.MergedDictionaries>
        <behaviors:SharedResourceDictionary RelativeSource="Themes/Common.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Style x:Key="HyperlinkStyle" TargetType="Hyperlink">
        <Setter Property="Foreground" Value="{StaticResource SciChartDarkGreenBrush}"/>
        <Setter Property="TextDecorations" Value="Underline"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{StaticResource SciChartGreenBrush}" />
                <Setter Property="TextDecorations" Value="None" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>