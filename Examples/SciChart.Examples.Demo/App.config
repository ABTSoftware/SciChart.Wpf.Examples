	</runtime>

	<applicationSettings>
		<SciChart.Examples.Demo.Properties.Settings>
			<setting name="UsageServiceAddress" serializeAs="String">
				<value>http://licensing.scichart.com</value>
			</setting>
		</SciChart.Examples.Demo.Properties.Settings>
	</applicationSettings>
