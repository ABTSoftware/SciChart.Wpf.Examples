<Window x:Class="SciChart.Sandbox.Examples.TicklinesUniformGrid.TicklinesUniformGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SciChart.Sandbox.Examples.TicklinesUniformGrid"
        xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
        mc:Ignorable="d"
        Title="TicklinesUniformGrid" Height="300" Width="300">
    <Grid>
        <s:SciChartSurface x:Name="sciChart" s:ThemeManager.Theme="Chrome">
            <s:SciChartSurface.XAxis>
                <s:NumericAxis x:Name="xAxis" IsLabelCullingEnabled="False"/>
            </s:SciChartSurface.XAxis>
            <s:SciChartSurface.YAxis>
                <s:NumericAxis x:Name="yAxis" IsLabelCullingEnabled="False"/>
            </s:SciChartSurface.YAxis>
            
            <s:SciChartSurface.Annotations>
                <s:TextAnnotation Text="Major Gridlines: 25mm, Minor gridlines: 5mm" CoordinateMode="Relative"/>
            </s:SciChartSurface.Annotations>
        </s:SciChartSurface>
    </Grid>
</Window>
