<Window x:Class="HitTestSandboxExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HitTestSandboxExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="Start 2D Hit Test Example" Margin="20" Padding="15" Click="Start2DClick"/>
            <Button Content="Start 3D Hit Test Example" Margin="20" Padding="15" Click="Start3DClick"/>
        </StackPanel>
    </Grid>
</Window>
