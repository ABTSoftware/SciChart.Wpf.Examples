<Window x:Class="TimeLineControlExample.TimeLineControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
        xmlns:timeLineControlExample="clr-namespace:TimeLineControlExample"
        mc:Ignorable="d"
        Title="TimeLineControl" Height="450" Width="800">
    <Grid>
        <s:SciChartSurface>
            <s:SciChartSurface.RenderableSeries>
                <timeLineControlExample:TimelineRenderableSeries x:Name="TimelineSeries0" YOffset="0.5" Height="0.8"/>
                <timeLineControlExample:TimelineRenderableSeries x:Name="TimelineSeries1" YOffset="1.5" Height="0.8"/>
            </s:SciChartSurface.RenderableSeries>
            <s:SciChartSurface.XAxis>
                <s:NumericAxis/>
            </s:SciChartSurface.XAxis>
            <s:SciChartSurface.YAxis>
                <s:NumericAxis VisibleRange="0,2" AutoRange="Never"/>
            </s:SciChartSurface.YAxis>
        </s:SciChartSurface>
    </Grid>
</Window>
