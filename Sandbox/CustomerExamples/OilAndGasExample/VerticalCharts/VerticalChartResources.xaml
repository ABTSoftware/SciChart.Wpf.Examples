<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="http://schemas.abtsoftware.co.uk/scichart">

    <VisualBrush x:Key="CrossPatternedBrush"
                 TileMode="Tile"
                 Viewport="0,0,10,10" 
                 Viewbox="0,0,10,10" 
                 ViewportUnits="Absolute"    
                 ViewboxUnits="Absolute">
        <VisualBrush.Visual>
            <Canvas>
                <Rectangle Fill="LightGreen" Width="10" Height="10"/>
                <Path Stroke="#474747" Data="M 0 0 l 10 10"/>
                <Path Stroke="#474747" Data="M 0 10 l 10 -10"/>
            </Canvas>
        </VisualBrush.Visual>
    </VisualBrush>

    <Style x:Key="CrossStackedMountainStyle" TargetType="s:StackedMountainRenderableSeries">
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Stroke" Value="#474747"/>
        <Setter Property="Fill" Value="{StaticResource CrossPatternedBrush}"/>
    </Style>

    <Style x:Key="GreenStackedMountainStyle" TargetType="s:StackedMountainRenderableSeries">
        <Setter Property="AntiAliasing" Value="True"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Stroke" Value="#474747"/>
        <Setter Property="Fill" Value="LightGreen"/>
    </Style>

    <Style x:Key="YellowStackedMountainStyle" TargetType="s:StackedMountainRenderableSeries">
        <Setter Property="AntiAliasing" Value="True"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Stroke" Value="#474747"/>
        <Setter Property="Fill" Value="#E4E840"/>
    </Style>

    <Style x:Key="RedStackedMountainStyle" TargetType="s:StackedMountainRenderableSeries">
        <Setter Property="AntiAliasing" Value="True"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Stroke" Value="#474747"/>
        <Setter Property="Fill" Value="Firebrick"/>
    </Style>

    <Style x:Key="VerticalChartAxisStyle" TargetType="{x:Type s:AxisBase}">
        <Setter Property="AutoRange" Value="Always"/>
        <Setter Property="Visibility" Value="Collapsed"/>
    </Style>

    <Style x:Key="VerticalChartTitleStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>

</ResourceDictionary>