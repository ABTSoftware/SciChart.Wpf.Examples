<UserControl x:Class="OilAndGasExample.VerticalCharts.VerticalChartsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:OilAndGasExample.VerticalCharts"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:s="http://schemas.abtsoftware.co.uk/scichart">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="VerticalChartResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel Background="#1C1C1E">
        <Border DockPanel.Dock="Top"
                Height="100"
                Background="#3C3C3E">
            <TextBlock Text="TODO Interactive Axis Legend"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>

        <ItemsControl DockPanel.Dock="Top"
                      ItemsSource="{Binding VerticalCharts}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <b:Interaction.Behaviors>
                            <l:GridItemsPanelBehavior/>
                        </b:Interaction.Behaviors>
                    </Grid>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <s:SciChartSurface Margin="5,0"
                                       ShowLicensingWarnings="False"
                                       ChartTitle="{Binding ChartTitle}"
                                       ChartTitleStyle="{StaticResource VerticalChartTitleStyle}"
                                       XAxes="{s:AxesBinding XAxes}"
                                       YAxes="{s:AxesBinding YAxes}"
                                       RenderableSeries="{s:SeriesBinding RenderableSeries}">

                        <b:Interaction.Behaviors>
                            <l:SurfaceToViewModelBehavior/>
                        </b:Interaction.Behaviors>

                        <s:SciChartSurface.ChartModifier>
                            <s:ModifierGroup>
                                <s:MouseWheelZoomModifier XyDirection="XDirection"/>
                                <s:ZoomExtentsModifier XyDirection="XDirection"/>
                            </s:ModifierGroup>
                        </s:SciChartSurface.ChartModifier>
                    </s:SciChartSurface>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DockPanel>
</UserControl>
