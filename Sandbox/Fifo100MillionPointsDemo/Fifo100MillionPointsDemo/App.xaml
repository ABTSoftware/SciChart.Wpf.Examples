<Application x:Class="Fifo100MillionPointsDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Common.xaml"/>
                <ResourceDictionary Source="Resources/Brushes.xaml"/>
                <ResourceDictionary Source="Resources/ComboBox.Common.xaml"/>
                <ResourceDictionary Source="Resources/ComboBox.Wpf.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type s:SciChartSurface}">
                <Setter Property="s:ThemeManager.Theme" Value="SciChartv4Dark"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
